@model Presupuestos

<h2>Â¿Desea borrar el siguiente presupuesto?</h2>
<section>
    <p>Nombre de destinatario: @Model.NombreDestinatario</p>
    <p>Fecha de creacion: @Model.FechaCreacion</p>
</section>

<form asp-action="Delete" method="post" class="form-horizontal">
    <section class="form-group">
        @* <label asp-for="NombreDestinatario" class="control-label">Nombre del destinatario</label> *@
        <input asp-for="NombreDestinatario" type="text" class="form-control">
    </section>
    <section class="form-group">
        @* <label asp-for="FechaCreacion" class="control-label">Precio</label> *@
        <input asp-for="FechaCreacion" type="date" class="form-control">
    </section>
    <section>
        <input asp-for="IdPresupuestos" type="hidden">
    </section>
    <section class="form-group">
        <button type="submit" class="btn btn-primary">Borrar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </section>
</form>