
<h2>Lista de Productos</h2>

<p>
    <a asp-controller="Productos" asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Accciones</th>
            @* <th></th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (Productos item in Model)
        {
            <tr>
                @* <td>@item.IdProducto</td> *@
                <td>@item.Description</td>
                <td>@item.Precio</td>
                <td>
                    <a asp-controller="Productos" asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-warning">Modificar</a>
                    <a asp-controller ="Productos" asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>